.container-404 {
  background: #081421;
  color: #d3d7de;
  font-family: "Courier new";
  font-size: 18px;
  line-height: 1.5em;
  cursor: default;
  width: 100%;
  height: 100%;
  margin: 0;
  padding: 0;

  .code-area-404 {
    position: absolute;
    width: 320px;
    min-width: 320px;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);

    > span {
      display: block;
    }

    a {
      color: #fff;
    }
  }
}

@media screen and (max-width: 320px) {
  .container-404 .code-area-404 {
    font-size: 5vw;
    min-width: auto;
    width: 95%;
    margin: auto;
    padding: 5px;
    padding-left: 10px;
    line-height: 6.5vw;
  }
}
